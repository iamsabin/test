#!/bin/bash
# Prevents force-pushing to master

echo -e "===\n>> Pre-push Hook: Checking branch name..."

BRANCH=`git rev-parse --abbrev-ref HEAD`
PROTECTED_BRANCHES="^(masters|develop)"
CURRENT_EMAIL=`git config user.email`
ALLOWED_EMAILS="^(?!)(mhr_sabin@hotmails.com|ajeetchaulagain@gmail.com)"

if [[ $1 != *"$BRANCH"* ]]
then
  echo -e "\nðŸš« You must use (git push origin $BRANCH).\n" && exit 1
fi

if [[ "$CURRENT_EMAIL" =~ $ALLOWED_EMAILS ]]
then
  echo -e "\nðŸš« Cannot push to remote $BRANCH branch, you don't have right access." && exit 1
fi 

if [[ "$BRANCH" =~ $PROTECTED_BRANCHES ]]
then
  echo -e "\nðŸš« Cannot push to remote $BRANCH branch, please create your own branch and use PR." && exit 1
fi

echo -e ">> Finish checking branch name.\n==="

exit 0